{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "inlineSourceMap": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "lib/**"
    ]
}
